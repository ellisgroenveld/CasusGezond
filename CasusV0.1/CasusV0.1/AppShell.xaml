<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:views="clr-namespace:CasusV0._1"
       x:Class="CasusV0._1.AppShell">
    
    <FlyoutItem Title="Main Page">
        <Tab>
            <ShellContent>
                <views:MainPage />
            </ShellContent>
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Profile">
        <Tab>
            <ShellContent>
                <views:ProfilePage />
            </ShellContent>
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Friends">
        <Tab>
            <ShellContent>
                <views:FriendPage />
            </ShellContent>
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Logout">
        <Tab>
            <ShellContent>
                <views:LoginPage />
            </ShellContent>
        </Tab>
    </FlyoutItem>
</Shell>