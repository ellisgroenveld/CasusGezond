<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CasusV0._1.AccountCreationPage">
    <StackLayout HorizontalOptions="Center" Padding="20">
        <Label Text="Account creation" FontSize="Title"/>
        <Entry x:Name="emailInput" Placeholder="Email"/>
        <Entry x:Name="usernameInput" Placeholder="Username"/>
        <Entry x:Name="passwordInput" Placeholder="Password" IsPassword="True"/>
        <Entry x:Name="confirmpassInput" Placeholder="Confirm pasword" IsPassword="True"/>
        <Button x:Name="createaccountButton" Text="Create account" Clicked="createaccountButton_Clicked"/>
    </StackLayout>
</ContentPage>