<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CasusV0._1.FriendPage">
    <ScrollView>
    <StackLayout>
        <StackLayout Orientation="Horizontal">
            <Button Text="Add friends"/>
            <Button Text="Manage friends"/>
        </StackLayout>
        <SearchBar x:Name="searchfriend" Placeholder="Search"/>
        <ListView x:Name="friendsListView"  BackgroundColor="White">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Username}" TextColor="Black"></TextCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
    </ScrollView>
</ContentPage>